							<headerToolbar>
								<Toolbar>
									<Title text="Invoices"/>
									<ToolbarSpacer/>
									<SearchField width="30%" search=".onFilterInvoices"/>
								</Toolbar>
							</headerToolbar>
							<columns>
								<Column hAlign="End" minScreenWidth="Small" demandPopin="true" width="4em">
									<Text text="Qtd."/>
								</Column>
								<Column>
									<Text text="Nome"/>
								</Column>
								<Column minScreenWidth="Small" demandPopin="true">
